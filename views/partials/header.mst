<html>
    <head>

        <title>{{pageTitle}}  {{h.defaultPageTitle}}</title>
        <link rel="stylesheet" href="/assets/css/style.css" />
    </head>
    <body>
    <header>
        <h1>Cabeçalho</h1>
        {{#user}}
            Olá, {{user.name}}! 
        {{/user}}
        <hr/>
        <ul>
            {{#h.menu}}
                <li><a href="{{slug}}">{{name}}</a></li>
            {{/h.menu}}
        </ul>
    </header>
        <hr/>
        {{#flashes}}
            <div>
                {{#success}}
                    <div class="warning">{{.}}</div>
                {{/success}}
                {{#error}}
                    <div class="warning">{{.}}</div>
                {{/error}}
                {{#info}}
                    <div class="warning">{{.}}</div>
                {{/info}}
            </div>
        {{/flashes}}
